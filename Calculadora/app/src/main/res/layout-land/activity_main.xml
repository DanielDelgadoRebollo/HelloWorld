<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-5sp"
        android:layout_weight="0.2"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <LinearLayout
        android:id="@+id/teclas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/grisOscuro"
                android:text="sin"
                android:textSize="20sp"
                android:id="@+id/btnSin"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/grisOscuro"
                android:text="AC"
                android:textSize="30sp"
                android:id="@+id/btnBorrar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/grisOscuro"
                android:text="+/-"
                android:textSize="20sp"
                android:id="@+id/btnMasMenos"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/grisOscuro"
                android:text="%"
                android:textSize="20sp"
                android:id="@+id/btnPorcentaje"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/amarilloSeñales"
                android:text="/"
                android:textSize="20sp"
                android:id="@+id/btnDividir"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/grisOscuro"
                android:text="cos"
                android:textSize="20sp"
                android:id="@+id/btnCos"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/gris"
                android:text="7"
                android:textSize="30sp"
                android:id="@+id/btnSiete"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/gris"
                android:text="8"
                android:textSize="30sp"
                android:id="@+id/btnOcho"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/gris"
                android:text="9"
                android:textSize="30sp"
                android:id="@+id/btnNueve"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/amarilloSeñales"
                android:text="x"
                android:textSize="20sp"
                android:id="@+id/btnMultiplicar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/grisOscuro"
                android:text="tan"
                android:textSize="20sp"
                android:id="@+id/btnTan"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/gris"
                android:text="4"
                android:textSize="30sp"
                android:id="@+id/btnCuatro"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/gris"
                android:text="5"
                android:textSize="30sp"
                android:id="@+id/btnCinco"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/gris"
                android:text="6"
                android:textSize="30sp"
                android:id="@+id/btnSeis"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/amarilloSeñales"
                android:text="-"
                android:textSize="20sp"
                android:id="@+id/btnResta"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/grisOscuro"
                android:text="ln"
                android:textSize="20sp"
                android:id="@+id/btnLn"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/gris"
                android:text="1"
                android:textSize="30sp"
                android:id="@+id/btnUno"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/gris"
                android:text="2"
                android:textSize="40sp"
                android:id="@+id/btnDos"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/gris"
                android:text="3"
                android:textSize="30sp"
                android:id="@+id/btnTres"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/amarilloSeñales"
                android:text="+"
                android:textSize="20sp"
                android:id="@+id/btnSuma"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.6"
                android:backgroundTint="@color/gris"
                android:text="0"
                android:textSize="30sp"
                android:id="@+id/btnCero"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/gris"
                android:text=","
                android:textSize="40sp"
                android:id="@+id/btnComa"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-6sp"
                android:layout_marginBottom="-6sp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/amarilloSeñales"
                android:text="="
                android:textSize="40sp"
                android:id="@+id/btnIgual"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>